    },
    {
      "id": "reveal-lobby-dialog-box",
      "text": "You see a large wooden box on the table in the center of the room. Place a Search token.",
      "addSingleToken" : "token-box-lobby"
    },
    {
      "id": "reveal-lobby-dialog-doors",
      "text": "Three doors lead from this room. Place Explore tokens.",
      "addMultipleTokens" : [ "token-door1-lobby", "token-door2-lobby", "token-door3-lobby" ]
    },
    {
      "id": "reveal-study-dialog-room",
      "text": "The door leads to a dark study. Cold drafts blow in from the disused fireplace. Place the Study tile. Remove any Explore tokens leading to it."
