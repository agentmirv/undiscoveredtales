  "dialogs": [
    {
      "id": "dialog-box-lobby",
      "bmdId": "searchTokenBmd",
      "text": "A heavy wooden box lies on the table. The lid can be opened by sliding an ornate latch.",
      "buttonType": "cancel-action",
      "buttons": [
        { "text": "@ Search",
          "actions": [ {"type": "dialog", "dialogId": "dialog-box-lobby-searched"} ]
        }
      ]
    },
    {
      "id": "dialog-box-lobby-searched",
      "text": "You find an old newspaper clipping. The article describes the discovery of human remains in the Malahath River. The paper is two weeks old, according to the date. Gain 1 Clue. Then discard this Search Token.",
      "buttonType": "continue",
      "buttons": [
        { "text": "Continue",
          "actions": [ {"type": "removeTokens", "tokenIds": ["token-box-lobby"] } ]
        }
      ]
    },
    {
      "id": "dialog-door1-lobby",
      "bmdId": "exploreTokenBmd",
      "text": "Hey, its door number one.",
      "buttonType": "cancel-action",
      "buttons": [
        { "text": "@ Explore",
          "actions": [ {"type": "removeTokens", "tokenIds": ["token-door1-lobby"] } ]
        }
      ]
    },
    {
      "id": "dialog-door2-lobby",
